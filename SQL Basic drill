-- 1.	The IDs & durations for all trips of duration greater than 500, ordered by duration.
SELECT 
	trip_id,
	duration
FROM trips
WHERE duration > 500
ORDER BY duration DESC;


-- 2.	Every column of the stations table for station id 84.
SELECT 
	*
FROM stations
WHERE station_id = 84

-- 3.	The min temperature of all the occurrence of rain in zip 94301
SELECT 
	zip,
	mintemperaturef,
	events
FROM weather
WHERE zip = 94301 AND events = 'Rain'
ORDER BY mintemperaturef ASC
