-- What was the hottest day in our data set? Where was that?
SELECT zip, maxtemperaturef
FROM weather
WHERE
	maxtemperaturef = (SELECT MAX(maxtemperaturef) FROM weather);
  
  -- How many trips started at each station?
  SELECT
    start_station,
    COUNT(*) AS n_stations
FROM trips
GROUP BY start_station
ORDER BY n_stations DESC

-- What's the shortest trip that happened?
SELECT 
	start_station, duration
FROM
	trips
WHERE
	duration = (SELECT MIN(duration) FROM trips);
  
  -- What is the average trip duration, by end station?
  SELECT
    end_station, AVG(duration) AS avg_duration	
FROM
    trips
GROUP by end_station
ORDER BY avg_duration DESC
